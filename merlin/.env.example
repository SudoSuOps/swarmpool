# Merlin Environment Configuration
# Copy to .env and fill in values

# Required: Private key for signing epoch seals
MERLIN_PRIVATE_KEY=0x...

# Identity (ENS name)
MERLIN_IDENTITY=merlin.swarmos.eth

# Pool ENS
SWARM_POOL=swarmpool.eth

# IPFS
IPFS_API=http://localhost:5001
IPFS_GATEWAY=https://ipfs.io/ipfs

# Epoch settings
EPOCH_DURATION_SECONDS=3600

# Polling
POLL_INTERVAL_SECONDS=10

# Settlement splits
PROVIDER_SHARE=0.75
NETWORK_OPS_SHARE=0.25
